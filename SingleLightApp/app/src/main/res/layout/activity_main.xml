<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#000000" android:id="@+id/relativeLayout">
    <View
            android:layout_width="144dp"
            android:layout_height="283dp"
            android:id="@+id/view"
            android:background="#C0C0C0" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintVertical_bias="0.208"/>
    <View
            android:layout_width="47dp"
            android:layout_height="228dp"
            android:id="@+id/view2" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="40dp" app:layout_constraintBottom_toBottomOf="parent"
            android:background="#808080" app:layout_constraintTop_toBottomOf="@+id/view"
            app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="251dp"
            android:layout_height="49dp"
            android:id="@+id/textViewColor" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/view"
            app:layout_constraintVertical_bias="0.436" android:textStyle="bold" android:textAlignment="center"
            android:textSize="40sp"
            android:textColor="@color/colorPrimaryDark"/>
    <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#FFA07A"
            android:id="@+id/imageButtonRedInitial"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/view"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.06"/>

    <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#DC143C"
            android:id="@+id/imageButtonRed"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="@+id/view"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/view2"
            app:layout_constraintHorizontal_bias="0.498" app:layout_constraintVertical_bias="0.06"/>

    <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#7CFC00"
            android:id="@+id/imageButtonGreenInitial"
            app:layout_constraintTop_toTopOf="@+id/view" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view2" app:layout_constraintVertical_bias="0.702"
            app:layout_constraintStart_toStartOf="@+id/view" app:layout_constraintEnd_toEndOf="@+id/view"/>
    <View
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="#008000"
            android:id="@+id/imageButtonGreen" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/view" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/view2" app:layout_constraintVertical_bias="0.689"
            app:layout_constraintStart_toStartOf="@+id/view" app:layout_constraintEnd_toEndOf="@+id/view"/>
</android.support.constraint.ConstraintLayout>